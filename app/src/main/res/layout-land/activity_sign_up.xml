<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Logo a la izquierda -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/lata_sin_fondo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Scroll con campos a la derecha -->
    <ScrollView
        android:id="@+id/scrollSignUp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fillViewport="true"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bienvenido_a_canhub"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="center" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <EditText
                    android:id="@+id/nombreSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/caja_texto"
                    android:textSize="18sp"
                    android:hint="@string/nombre_de_usuario"
                    android:fontFamily="@font/poppins"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/caja_texto"
                    android:textSize="18sp"
                    android:hint="@string/email"
                    android:fontFamily="@font/poppins"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/contra"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/caja_texto"
                    android:textSize="18sp"
                    android:hint="@string/contrase_a"
                    android:fontFamily="@font/poppins"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/confirmar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/caja_texto"
                    android:textSize="18sp"
                    android:hint="@string/confirmar_contrase_a"
                    android:fontFamily="@font/poppins"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/registrarse"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="@string/registrarse"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:backgroundTint="@color/azul"
                app:cornerRadius="8dp"
                android:onClick="inicio" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/ya_tiene_una_cuenta"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/inicioSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/iniciar_sesion"
                    android:textColor="@color/azulverde"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:onClick="returnLogin" />
            </LinearLayout>

            <TextView
                android:id="@+id/continuar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/continuar_sin_registrarse"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                android:onClick="goMain" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
